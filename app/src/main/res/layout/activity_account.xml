<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/AccountBackButton"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_baseline_navigate_before_24"
                android:padding="@dimen/_5sdp"
                app:tint="@color/peach"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Account"
                android:textColor="@color/peach"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/editprofile"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    app:civ_border_color="@color/peach"
                    app:civ_border_width="4dp"
                    app:srcCompat="@drawable/profilephoto" />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Name"
                    android:background="#00000000"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20ssp"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc@gmail.com"
                    android:background="#00000000"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/black" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/AccEditprofilebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:paddingStart="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_bg_grey"
                    android:paddingEnd="@dimen/_30sdp"
                    android:text="Edit Profile"
                    android:textAllCaps="true"/>

                <LinearLayout
                    android:background="@drawable/round_bg_lightpeach"
                    android:backgroundTint="@color/peach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_baseline_info_24"
                            android:background="@drawable/round_bg_grey"/>
                        <TextView
                            android:layout_marginStart="@dimen/_60sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="About us"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/_15sdp"/>
                        <ImageView
                            android:id="@+id/AboutUsNext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_navigate_next_24"
                            app:tint="@color/white"
                            android:paddingEnd="@dimen/_12sdp"/>


                    </RelativeLayout>




                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/round_bg_lightpeach"
                    android:backgroundTint="@color/peach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_baseline_sms_failed_24"
                            android:background="@drawable/round_bg_grey"/>
                        <TextView
                            android:layout_marginStart="@dimen/_60sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="FAQ"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/_15sdp"/>
                        <ImageView
                            android:id="@+id/faqnext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_navigate_next_24"
                            app:tint="@color/white"
                            android:paddingEnd="@dimen/_12sdp"/>


                    </RelativeLayout>




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logoutLayout"
                    android:background="@drawable/round_bg_lightpeach"
                    android:backgroundTint="@color/peach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">
                    <RelativeLayout
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_baseline_logout_24"
                            android:background="@drawable/round_bg_grey"/>
                        <TextView
                            android:layout_marginStart="@dimen/_60sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="LogOut"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/_15sdp"/>



                    </RelativeLayout>




                </LinearLayout>








            </LinearLayout>

        </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


